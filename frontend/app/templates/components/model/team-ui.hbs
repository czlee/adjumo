
{{ team.name }}

<div class="hover-panel" style="display: none;">
    <div class="panel panel-default">

        <ul class="list-group">
            <li class="list-group-item text-center">
                <strong>{{ team.name }} of {{ team.institution.name }}</strong>
            </li>
            <li class="list-group-item btn-toolbar-holder">
                <div class="btn-toolbar pull-left">
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm region-display region-{{ team.region }}">
                            <span class="glyphicon glyphicon-globe"></span>
                        </div>
                        <div class="btn btn-default btn-sm region-display region-{{ team.region }}">
                            {{ team.regionName }}
                        </div>
                        {{#if team.regionaldeficit }}
                            <div class="btn btn-default btn-sm region-display region-{{ team.region }}">
                                Deficit: {{ team.regionaldeficit }}
                            </div>
                        {{/if}}
                    </div>
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm gender-display gender-{{team.gender}}">
                            <span class="glyphicon glyphicon-queen"></span>
                        </div>
                        <div class="btn btn-default btn-sm gender-display gender-{{team.gender}}">
                            {{ team.genderName }}
                        </div>
                        {{#if team.genderaldeficit }}
                            <div class="btn btn-default btn-sm gender-display gender-{{team.gender}}">
                                Deficit: {{ team.genderaldeficit }}
                            </div>
                        {{/if}}
                    </div>
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm language-display language-{{team.language}}">
                            <span class="glyphicon glyphicon-comment"></span>
                        </div>
                        <div class="btn btn-default btn-sm language-display language-{{team.language}}">
                            {{ team.languageName }}
                        </div>
                        {{#if team.languagedeficit }}
                            <div class="btn btn-default btn-sm language-display language-{{team.language}}">
                                Deficit: {{ team.languagedeficit }}
                            </div>
                        {{/if}}
                    </div>
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-stats"></span>
                        </div>
                        {{#if team.qualitydeficit }}
                            <div class="btn btn-default btn-sm">
                                Deficit: {{ team.qualitydeficit }}
                            </div>
                        {{/if}}
                    </div>
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-signal"></span>
                        </div>
                        <div class="btn btn-default btn-sm">
                            On {{ team.points }} Points
                        </div>
                    </div>
                </div>
                <div class="btn-toolbar pull-right">
                    {{#if team.teamAdjConflicts }}
                        <div class="btn-group" role="group">
                            {{#each team.teamAdjConflicts as |conflict| }}
                                {{#if conflict.panelActive }}
                                    <div class="popover-highlight btn btn-default btn-sm panel-team-adj-conflict">
                                        <span class="glyphicon glyphicon-remove"> </span>
                                    </div>
                                    <div class="popover-highlight btn btn-default btn-sm panel-team-adj-conflict">
                                        {{conflict.adjudicator.name}}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if team.hasInstitutionalConflict }}
                        <div class="btn-group" role="group">
                            <div class="popover-highlight btn btn-default btn-sm panel-institution-conflict">
                                <span class="glyphicon glyphicon-remove"></span>
                            </div>
                            <div class="popover-highlight btn btn-default btn-sm panel-institution-conflict">
                                {{team.institution.name}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if team.teamAdjHistories }}
                        <div class="btn-group" role="group">
                            {{#each team.teamAdjHistories as |history| }}
                                {{#if history.panelActive }}
                                    <div class="popover-highlight btn btn-default btn-sm panel-team-adj-history">
                                        <span class="glyphicon glyphicon-time"></span> {{ history.rounds }}
                                    </div>
                                    <div class="popover-highlight btn btn-default btn-sm panel-team-adj-history">
                                        {{ history.adjudicator.short_name }}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                </div>
            </li>
        </ul>

    </div>
</div>
