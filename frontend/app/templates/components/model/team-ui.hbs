
{{ team.name }}

<div class="hover-panel" style="display: none;">
    <div class="panel panel-default">

        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-5">
                        <strong>{{ team.name }}</strong> of <strong>{{ team.institution.name }}</strong>
                    </div>
                    <div class="col-md-3">
                        <span class="glyphicon glyphicon-globe text-muted"></span> {{ team.regionName }}
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-queen text-muted"></span> {{ team.genderName }}
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-comment text-muted"></span> {{ team.languageName }}
                    </div>
                </div>
            </li>
            <li class="list-group-item btn-toolbar-holder">
                <div class="btn-toolbar">
                    <div class="btn-group" role="group">
                        {{#if team.teamAdjConflicts }}
                            {{#each team.teamAdjConflicts as |conflict| }}
                                {{#if conflict.panelActive }}
                                    <div class="btn btn-default btn-sm">
                                        <span class="text-danger glyphicon glyphicon-remove"></span>
                                    </div>
                                    <div class="btn btn-sm panel-adj-conflict">{{conflict.adjudicator.name}}</div>
                                {{else}}
                                    <div class="btn btn-default btn-sm">
                                        <span class="text-danger glyphicon glyphicon-remove"></span>
                                    </div>
                                    <div class="btn btn-sm">{{conflict.adjudicator.name}}</div>
                                {{/if}}
                            {{/each}}
                        {{else}}
                            <div class="btn btn-default btn-sm">None</div>
                        {{/if}}
                    </div>
                    <div class="btn-group" role="group">
                        {{#if team.teamHistory }}
                            {{#each team.teamHistory as |history| }}
                                {{#if history.panelActive }}
                                    <div class="btn btn-default btn-sm">
                                        <span class="text-primary"><span class=" glyphicon glyphicon-time"></span> {{history.rounds }}</span>
                                    </div>
                                    <div class="btn btn-sm panel-history-conflict">{{history.adjudicator.short_name }}</div>
                                {{else}}
                                    <div class="btn btn-default btn-sm">
                                        <span class="text-primary"><span class=" glyphicon glyphicon-time"></span> {{history.rounds }}</span>
                                    </div>
                                    <div class="btn btn-sm">{{history.adjudicator.short_name }}</div>
                                {{/if}}
                            {{/each}}
                        {{else}}
                            <div class="btn btn-default btn-sm">None</div>
                        {{/if}}
                    </div>
                </div>
            </li>
        </ul>

    </div>
</div>
