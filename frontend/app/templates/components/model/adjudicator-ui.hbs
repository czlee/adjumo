{{#if adj}}

<div class="flex-1">
    <span class="adj-name">
        {{ adj.short_name }}
    </span>
    <span class="text-uppercase adj-institution">
        {{ adj.institution.short_code }}
    </span>
</div>
<div class="flex-icon flex-icon adj-ranking">
    <span>
        <strong>{{ adj.get_ranking }}</strong>
    </span>
</div>

<div class="hover-panel" style="display: none;">
    <div class="panel panel-default">

        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-6">
                        <strong>{{ adj.name }}</strong> of <strong>{{ adj.institution.name }}</strong>
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-globe text-muted"></span> {{ adj.regionName }}
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-queen text-muted"></span> {{ adj.genderName }}
                    </div>
                    <div class="col-md-1">
                        <span class="glyphicon glyphicon-comment text-muted"></span> {{ adj.languageName }}
                    </div>
                    <div class="col-md-1">
                        <span class="glyphicon glyphicon-stats text-muted"></span> {{ adj.get_ranking }}
                    </div>
                </div>
            </li>

            <li class="list-group-item btn-toolbar-holder">
                <div class="btn-toolbar">
                    {{#if adj.teamAdjConflicts }}
                        <div class="btn-group" role="group">
                            {{#each adj.teamAdjConflicts as |conflict| }}
                                {{#if conflict.panelActive }}
                                    <div class="popover-highlight btn btn-default btn-sm panel-adj-team-conflict">
                                        <span class="glyphicon glyphicon-remove"></span> {{conflict.team.name}}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if adj.hasInstitutionalConflict }}
                        <div class="btn-group" role="group">
                            <div class="popover-highlight btn btn-default btn-sm panel-institution-conflict">
                                <span class="glyphicon glyphicon-remove"></span> {{adj.institution.name}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if adj.adjAdjConflicts }}
                        <div class="btn-group" role="group">
                            {{#each adj.adjAdjConflicts as |conflict| }}
                                {{#if conflict.panelActive }}
                                    <div class="popover-highlight btn btn-default panel-team-adj-conflict btn-sm">
                                        <span class="glyphicon glyphicon-remove"></span> {{conflict.adj1.name}} {{conflict.adj2.name}}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if adj.teamAdjHistories }}
                        <div class="btn-group" role="group">
                            {{#each adj.teamAdjHistories as |history| }}
                                {{#if history.panelActive }}
                                    <div class="popover-highlight btn btn-default panel-team-adj-history btn-sm">
                                        <span class="glyphicon glyphicon-time"></span> {{history.rounds}} {{history.team.name }}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if adj.adjAdjHistories }}
                        <div class="btn-group" role="group">
                            {{#each adj.adjAdjHistories as |history| }}
                                {{#if history.panelActive }}
                                    <div class="popover-highlight btn btn-default panel-adj-adj-history btn-sm">
                                        <span class="glyphicon glyphicon-time"></span> {{history.rounds}} {{ history.adj1.short_name }} {{ history.adj2.short_name }}
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}

                </div>
            </li>
        </ul>

    </div>
</div>

{{/if}}

