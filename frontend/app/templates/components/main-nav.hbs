<nav class="navbar navbar-static-top navbar-default">

  <div class="nav navbar-nav navbar-form btn-group btn-group-sm">
    <button type="submit" class="btn btn-default" data-toggle="modal" data-target="#setAllocationParameters">
      Set Parameters
    </button>
    <button type="submit" class="btn btn-default" {{action "startNewAllocation"}}>
      Create Allocation
    </button>
  </div>

  <div class="form-inline pull-left navbar-form">
    {{#if showingLockBans }}
      <button class="active btn btn-default lock-ban-nav btn-sm" {{action "showLockAndBans" }}>
        <span class="glyphicon glyphicon-eye-close"></span>
         Locks/Bans/Groups
      </button>
    {{else}}
      <button class="btn btn-default lock-ban-nav btn-sm" {{action "showLockAndBans" }}>
        <span class="glyphicon glyphicon-eye-open"></span>
         Locks/Bans/Groups
      </button>
    {{/if}}
    {{#each allocations as |allocation| }}
      <button class="btn btn-default active btn-sm allocation-nav allocation-nav-{{allocation.id}}" {{action "showAllocation" allocation.id }}>
        <span class="glyphicon glyphicon-eye-close"></span><span class="glyphicon glyphicon-eye-open hidden"></span>
          Allocation {{ allocation.id }}
      </button>
    {{/each}}
  </div>

  <div class="form-inline pull-right navbar-form">
    <button type="submit" class="btn btn-success btn-sm" data-toggle="modal" data-target="#exportAllocation">
      <span class="glyphicon glyphicon-share-alt"></span> Select & Export Allocation
    </button>
  </div>

</nav>

<!-- Modal -->
<div class="modal fade" id="exportAllocation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Select Which Allocation To Export</h4>
      </div>
      <div class="modal-body">
        <form>
        {{#if allocations}}
          {{#each allocations as |allocation| }}
            <button type="button" class="btn btn-default btn-block">
              Export Allocation {{allocation.id}}
            </button>
          {{/each}}
        {{else}}
          No allocations to export!
        {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="setAllocationParameters" tabindex="-1" role="dialog" aria-labelledby="parametersModal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="setAllocationParameters">Set Allocation Parameters</h4>
      </div>
      <div class="modal-body">
        <form>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Quality</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.quality  }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control"                  value=config.quality}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Regional</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.regional  }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control"                  value=config.regional}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Language</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.language }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control"                  value=config.language}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Gender</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.gender }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control"                  value=config.gender}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Team History</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.teamhistory }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control" value=config.teamhistory}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Adj History</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.adjhistory }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control" value=config.adjhistory}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Team Conflict</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.teamconflict }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control" value=config.teamconflict}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2">Adj Conflict</label>
            <div class="col-sm-8">
              {{input type="range" min="1" max="10" step="1" list="debate-ticks" value=config.adjconflict }}
            </div>
            <div class="col-sm-1">
                {{input class="form-control" value=config.adjconflict}}
            </div>
          </fieldset>
          <fieldset class="form-group row">
            <label for="adjconflict_fader" class="col-sm-2"></label>
            <div class="col-sm-8">
              <button type="submit" class="btn btn-success btn-block" {{action "startNewConfig"}}>
                Save Configuration
              </button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
