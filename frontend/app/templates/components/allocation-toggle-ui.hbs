{{#if allocation.active }}
    <button class="btn btn-default active btn-sm allocation-nav allocation-nav-{{allocation.id}}" {{action "toggleAllocation" allocation.id }}>
        <span class="glyphicon glyphicon-eye-close"></span>
          Allocation {{ allocation.id }}
    </button>
{{else}}
    <button class="btn btn-default btn-sm allocation-nav allocation-nav-{{allocation.id}}" {{action "toggleAllocation" allocation.id }}>
        <span class="glyphicon glyphicon-eye-open"></span>
          Allocation {{ allocation.id }}
    </button>
{{/if}}