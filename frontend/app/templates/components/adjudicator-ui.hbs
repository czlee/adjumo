{{#if adj}}

    <div class="flex-1">
        <span class="adj-name">
            {{ adj.short_name }}
        </span>
        <span class="text-uppercase adj-institution">
            {{ adj.institution.code }}
        </span>
    </div>
    <div class="flex-icon flex-icon adj-ranking">
        <span>
            <strong>{{ adj.get_ranking }}</strong>
        </span>
    </div>

    <div class="hover-panel" style="display: none;">
        <div class="panel panel-default">
            <div class="panel-heading ranking-display ranking-{{ adj.ranking }}">
                <span class="pull-right">{{ adj.get_ranking }}</span>
                <h5 class="panel-title">{{ adj.name }}</h5>
            </div>
            <ul class="list-group">
                <li class="list-group-item uppercase">
                    {{ adj.institution.name }}
                </li>
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-queen text-muted pull-right"></span> {{ adj.genderName }}
                </li>
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-comment text-muted pull-right"></span> {{ adj.languageName }}
                </li>
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-globe text-muted pull-right"></span> {{ adj.regionName }}
                </li>
                {{#if adj.teamConflicts }}
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-remove text-muted pull-right"></span>
                    {{#each adj.teamConflicts as |conflict| }}
                        {{conflict.team.name }}
                    {{/each}}
                </li>
                {{/if}}
            </ul>
        </div>

    </div>

{{/if}}

