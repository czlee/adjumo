{{#if adj}}

    <div class="flex-1">
        <span class="adj-name">
            {{ adj.short_name }}
        </span>
        <span class="text-uppercase adj-institution">
            {{ adj.institution.code }}
        </span>
    </div>
    <div class="flex-icon flex-icon adj-ranking">
        <span>
            <strong>{{ adj.get_ranking }}</strong>
        </span>
    </div>

    <div class="hover-panel" style="display: none;">
        <div class="panel panel-default">

            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2">
                            <strong>{{ adj.name }}</strong>
                        </div>
                        <div class="col-md-4">
                            <strong>{{ adj.institution.name }}</strong>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                              <div class="col-md-5">
                                <span class="glyphicon glyphicon-globe text-muted"></span> {{ adj.regionName }}
                              </div>
                              <div class="col-md-3">
                                <span class="glyphicon glyphicon-queen text-muted"></span> {{ adj.genderName }}
                              </div>
                              <div class="col-md-2">
                                <span class="glyphicon glyphicon-comment text-muted"></span> {{ adj.languageName }}
                              </div>
                              <div class="col-md-2">
                                <span class="glyphicon glyphicon-stats text-muted"></span> {{ adj.get_ranking }}
                              </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-remove text-muted"></span>
                    {{#if adj.teamConflicts }}
                        {{#each adj.teamConflicts as |conflict| }}
                            {{conflict.team.name }},
                        {{/each}}
                    {{/if}}
                    {{#if adj.adjConflicts }}
                        {{#each adj.adjConflictsWithOutSelf as |conflict| }}
                            {{conflict.name }},
                        {{/each}}
                    {{/if}}
                </li>
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-time text-muted"></span>
                    R1 (team), R1 (team), R1 (team), R1 (team)
                </li>
            </ul>

        </div>
    </div>

{{/if}}

