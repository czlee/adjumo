
{{ team.name }}

<div class="hover-panel" style="display: none;">
    <div class="panel panel-default">

        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-5">
                        <strong>{{ team.name }}</strong> of <strong>{{ team.institution.name }}</strong>
                    </div>
                    <div class="col-md-3">
                        <span class="glyphicon glyphicon-globe text-muted"></span> {{ team.regionName }}
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-queen text-muted"></span> {{ team.genderName }}
                    </div>
                    <div class="col-md-2">
                        <span class="glyphicon glyphicon-comment text-muted"></span> {{ team.languageName }}
                    </div>
                </div>
            </li>
            <li class="list-group-item btn-toolbar-holder">
                <div class="btn-toolbar">
                    <div class="btn-group" role="group">
                        <div class="btn btn-default btn-sm">
                            <span class="text-danger glyphicon glyphicon-remove"></span>
                        </div>
                        {{#if team.adjConflicts }}
                            {{#each team.adjConflicts as |conflict| }}
                                <div class="btn btn-default btn-sm">{{conflict.adjudicator.name}}</div>
                            {{/each}}
                        {{else}}
                            <div class="btn btn-default btn-sm">None</div>
                        {{/if}}
                    </div>
                    {{#if team.adjHistory }}
                        {{#each team.adjHistoryLinear as |history| }}
                        <div class="btn-group" role="group">
                            <div class="btn btn-default btn-sm">
                                <span class="text-primary"><span class=" glyphicon glyphicon-time"></span> {{history.round }}</span>
                            </div>
                            {{#each history.adjudicators as |adj| }}
                                <div class="btn btn-default btn-sm">{{adj.short_name }}</div>
                            {{/each}}
                        </div>
                        {{/each}}
                    {{else}}
                        <div class="btn btn-default btn-sm">None</div>
                    {{/if}}
                </div>
            </li>
        </ul>

    </div>
</div>
